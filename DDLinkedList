// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
class Node{
    public:
    int data;
    Node* next;
    Node* back;
    
    Node(int data1,Node* back1,Node* next1){
        data=data1;
        back=back1;
        next=next1;
    }
};
void print(Node* head)
{
    while(head){
        cout<<head->data<<" ";
        head=head->next;
    }
    cout<<endl;
}
Node* convertDL(int arr[],int n)
{
    Node* head=new Node(arr[0],nullptr,nullptr);
    Node* back=head;
    for(int i=1;i<n;i++){
        Node* tem=new Node(arr[i],back,nullptr);
        back->next=tem;
        back=tem;
    }
   /* cout<<"back: "<<endl;
    while(back){
        cout<<back->data<<" ";
        back=back->back;
    }
    cout<<endl;*/
    return head;
}
Node* deleteHead(Node* head1)
{   
    if(head1==NULL || head1->next==NULL) return NULL;
    
    Node* tem=head1;
    Node* head=head1->next;
    head->back=NULL;
    delete tem;
    return head;
}
Node* deleteTail(Node* head1)
{
     if(head1==NULL || head1->next==NULL) return NULL;
     Node* tem=head1;
     Node* pre=NULL;
     while(tem->next){
         //pre=tem;
         tem=tem->next;
     }
    tem->back->next=NULL;
    delete tem;
   
     return head1;
}
Node* deleteKthNode(Node* head1,int k)
{
    Node* tem=head1;
    int cnt=0;
    while(tem!=NULL){
        cnt++;
        if(cnt==k) break;
        tem=tem->next;
    }
    
    Node* front=tem->next;
    Node* prev=tem->back;
    if(prev==NULL && front==NULL) return NULL;
    else if(prev==NULL){
        return deleteHead(head1);
    }
    else if(front==NULL){
        return deleteTail(head1);
    }
    else{
        prev->next=tem->next;
        front->back=prev;
        tem->back=nullptr;
        tem->next=nullptr;
        delete tem;
    }
    return head1;
}
void deleteNode(Node* head)
{
    Node* prev=head->back;
    Node* front=head->next;
    if(front==NULL){
        prev->next=nullptr;
        head->back=nullptr;
        delete head;
        return;
    }
    prev->next=front;
    front->back=prev;
    head->next=nullptr;
    head->back=nullptr;
    delete head;
    return ;
    
}
Node* insertHead(int value,Node* head)
{
    //Node* tem1=tem;
    Node* newHead=new Node(value,nullptr,head);
    head->back=head;
    return newHead;
    
}
Node* insertTail(int value,Node* head)
{  
    Node* tem=head;
    while(tem->next){
        tem=tem->next;
    }
    Node* tail=new Node(value,tem,nullptr);
    tem->next=tail;
    return head;
}
int main() {
    
   int arr[]={2,3,4,56,34};
  
    Node* head=convertDL(arr,5);
    print(head);
    cout<<"After deleting Head pointer"<<endl;
    head=deleteHead(head);
    print(head);
   /* head= deleteTail(head);
    cout<<"After deleting Tail pointer"<<endl;
    print(head);*/
    cout<<"Afer deleting kth Node"<<endl;
    head=deleteKthNode(head,3);
    print(head);
    cout<<"Afer deleting given address  Node"<<endl;
    deleteNode(head->next);
    print(head);
    cout<<"Insert element before the Head"<<endl;
    head=insertHead(10,head);
    print(head);
    cout<<"Insert element After the Tail"<<endl;
    head=insertAfterTail(35,head);
    print(head);
    return 0;
}
